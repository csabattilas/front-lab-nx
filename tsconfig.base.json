{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "NodeNext",
    "target": "es2022",
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "module": "preserve",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "lib": ["es2020", "dom", "dom.iterable", "esnext"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "noUnusedLocals": true,
    "strict": true,
    "strictNullChecks": true,
    "baseUrl": ".",
    "paths": {
      "@frontlab/lion-form": ["libs/ui/lion/form/src/index.js"],
      "@frontlab/lion-form/*": ["libs/ui/lion/form/src/*"],
      "@frontlab/ng-api": ["libs/api/angular/src/index.ts"],
      "@frontlab/ng-documentation": ["libs/ui/angular/documentation/src/index.ts"],
      "@frontlab/ng-form": ["libs/ui/angular/form/src/index.ts"],
      "@frontlab/ng-repository": ["libs/repository/angular/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
